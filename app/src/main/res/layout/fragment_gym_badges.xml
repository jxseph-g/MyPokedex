<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <!-- Pokemon stats layout -->
    <RelativeLayout
        android:id="@+id/trainer_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_text_background"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/name_fixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME/"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOSEPH"
                android:textColor="@color/black"
                android:textSize="30dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_layout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_fixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME/"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:39"
                android:textColor="@color/black"
                android:textSize="30dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/trainer"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="right"
            android:layout_marginBottom="-100dp"
            android:layout_toRightOf="@+id/name_layout"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/trainer" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/trainer_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/badge1_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trainer_card"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_corners_location"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/badge1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/badge_1" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/badge2_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/badge1_layout"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_corners_location"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/badge2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/badge_1" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/badge3_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/badge2_layout"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_corners_location"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/badge3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/badge_1" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/badge4_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/badge3_layout"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_corners_location"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/badge4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/badge_1" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/badge5_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/badge4_layout"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_corners_location"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/badge5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/badge_1" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/badge6_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/badge5_layout"
                android:background="@drawable/rounded_corners_location"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/badge6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/badge_1" />
            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>